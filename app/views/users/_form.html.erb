<%= form_for @user do |f| %>
  <%= f.label :login %>
  <%= f.text_field :login %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.submit button_text %>
<% end %>